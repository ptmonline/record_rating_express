extends layout

block content
  h1(class="lead")= title
  p(class="lead") Get reviews from Wikileads
  form(name="record", method="post")
        div(class="form-group")
          div.input
              label Album
              input(class="form-control", type="text", name="albumtitle")
        div(class="form-group")
          div.input
              label Artist
              input(class="form-control", type="text", name="albumartist")
        div.actions
            input(class="btn btn-primary btn-lg" type="submit", value="Find Reviews")
  
